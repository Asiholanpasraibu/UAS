# ==========================================================
# APLIKASI PENGOLAHAN CITRA DIGITAL
# Implementasi berbagai teknik PCD
# ==========================================================

import cv2
import numpy as np
import matplotlib.pyplot as plt
from google.colab import files
import os

# ----------------------------------------------------------
# Upload Gambar
# ----------------------------------------------------------
print("Upload gambar (jpg / png)...")
uploaded = files.upload()

for filename in uploaded.keys():
    img = cv2.imread(filename)
    original_name = filename

# ----------------------------------------------------------
# Fungsi Tampilkan Gambar
# ----------------------------------------------------------
def show(image, title, scale_display=1):
    h, w = image.shape[:2]
    plt.figure(figsize=(w/100*scale_display, h/100*scale_display))
    if len(image.shape) == 2:
        plt.imshow(image, cmap='gray')
    else:
        plt.imshow(cv2.cvtColor(image, cv2.COLOR_BGR2RGB))
    plt.title(title)
    plt.axis('off')
    plt.show()

# ----------------------------------------------------------
# Konversi Dasar
# ----------------------------------------------------------
gray = cv2.cvtColor(img, cv2.COLOR_BGR2GRAY)

# ----------------------------------------------------------
# Menu
# ----------------------------------------------------------
def menu():
    print("\n====== MENU ======")
    print("1. Info Format File")
    print("2. Citra Keabuan")
    print("3. Citra Biner (Threshold)")
    print("4. Histogram & Equalization")
    print("5. Resize Gambar (Ukuran & Pixel Berubah)")
    print("6. Rotate Gambar")
    print("7. Morfologi - Erosi")
    print("8. Morfologi - Dilasi")
    print("9. Morfologi - Opening")
    print("10. Morfologi - Closing")
    print("11. Segmentasi Sederhana")
    print("12. Simpan & Unduh Hasil")
    print("0. Keluar")
    print("==================")

kernel = np.ones((5,5), np.uint8)
last_result = None
last_name = "hasil"

# ----------------------------------------------------------
# Program Utama
# ----------------------------------------------------------
running = True
while running:
    menu()
    p = input("Pilih menu: ")

    if p == "1":
        print("Nama File :", original_name)
        print("Ukuran    :", img.shape)
        print("Format    :", original_name.split('.')[-1])

    elif p == "2":
        last_result = gray
        last_name = "grayscale"
        show(gray, "Citra Keabuan")

    elif p == "3":
        _, binary = cv2.threshold(gray, 127, 255, cv2.THRESH_BINARY)
        last_result = binary
        last_name = "binary"
        show(binary, "Citra Biner")

    elif p == "4":
        equalized = cv2.equalizeHist(gray)
        last_result = equalized
        last_name = "equalization"

        plt.figure(figsize=(10,4))
        plt.subplot(1,2,1)
        plt.hist(gray.ravel(), 256)
        plt.title("Histogram Asli")

        plt.subplot(1,2,2)
        plt.hist(equalized.ravel(), 256)
        plt.title("Histogram Equalized")
        plt.show()

        show(equalized, "Histogram Equalization")

    elif p == "5":
        scale = float(input("Masukkan skala resize (contoh 0.5 atau 2): "))
        resized = cv2.resize(img, None, fx=scale, fy=scale)

        print("Ukuran sebelum :", img.shape[:2])
        print("Ukuran sesudah :", resized.shape[:2])

        last_result = resized
        last_name = f"resize_{scale}"
        show(resized, f"Resize x{scale}", scale_display=1)

    elif p == "6":
        angle = float(input("Masukkan sudut rotasi: "))
        h, w = img.shape[:2]
        M = cv2.getRotationMatrix2D((w/2, h/2), angle, 1)
        rotated = cv2.warpAffine(img, M, (w, h))

        last_result = rotated
        last_name = "rotate"
        show(rotated, f"Rotate {angle}Â°")

    elif p == "7":
        erosion = cv2.erode(gray, kernel, iterations=1)
        last_result = erosion
        last_name = "erosi"
        show(erosion, "Erosi")

    elif p == "8":
        dilation = cv2.dilate(gray, kernel, iterations=1)
        last_result = dilation
        last_name = "dilasi"
        show(dilation, "Dilasi")

    elif p == "9":
        opening = cv2.morphologyEx(gray, cv2.MORPH_OPEN, kernel)
        last_result = opening
        last_name = "opening"
        show(opening, "Opening")

    elif p == "10":
        closing = cv2.morphologyEx(gray, cv2.MORPH_CLOSE, kernel)
        last_result = closing
        last_name = "closing"
        show(closing, "Closing")

    elif p == "11":
        _, thresh = cv2.threshold(gray, 120, 255, cv2.THRESH_BINARY)
        segmented = cv2.morphologyEx(thresh, cv2.MORPH_OPEN, kernel)
        last_result = segmented
        last_name = "segmentasi"
        show(segmented, "Segmentasi Sederhana")

    elif p == "12":
        if last_result is not None:
            filename = f"{last_name}_{original_name}"
            cv2.imwrite(filename, last_result)
            files.download(filename)
        else:
            print("Belum ada hasil untuk disimpan.")

    elif p == "0":
        print("Program selesai.")
        running = False

    else:
        print("Pilihan tidak valid!")
